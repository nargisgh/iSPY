<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pop_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comicbackdrop"
    tools:context=".ui.PopUp">

    <TableLayout
        android:layout_width="568dp"
        android:layout_height="93dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="125dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TableRow>

            <TextView
                android:id="@+id/pop_username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/faster_one"
                android:text="@string/pop_username_text"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pop_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/faster_one"
                android:text="@string/pop_score_text"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pop_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/faster_one"
                android:text="@string/pop_date_text"
                android:textColor="#000000"
                android:textSize="25sp" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/pop_userid_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@string/pop_userid_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pop_uscore_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@string/pop_uscore_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pop_udate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@string/pop_udate_text"
                android:textColor="#000000"
                android:textSize="20sp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/pop_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/faster_one"
        android:text="@string/pop_title_text"
        android:textColor="#3F51B5"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>